<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{
	title : 'Registro'
}) %>
    <%- include('../partials/header') %>

        <body class="register">
            <main class="register__main">
                <h2>crear cuenta</h2>
                <section class="register__main__section">
                    <form action="" class="register__form" method="POST" enctype="multipart/form-data">
                        <div class="register__form__box">
                            <label class="register__form__box__label" class="register__form__box__label"
                                for="name">Nombre</label>
                            <input type="text" name="nombre"
                                class="register__form__box__input <%= locals.errors && errors.nombre ? 'is-invalid' : null %>" id="nombre"
                            value="<%= locals.old && old.nombre ? old.nombre : null %>" />
                            <small class="text-danger ms-2">
                                <%= locals.errors && errors.nombre ? errors.nombre.msg : null %>
                            </small>
                        </div>
                        <div class="register__form__box">
                            <label class="register__form__box__label" for="surname">Apellido</label>
                            <input type="text" name="apellido"
                                class="register__form__box__input <%= locals.errors && errors.apellido ? 'is-invalid' : null %>" id="apellido"
                            value="<%= locals.old && old.apellido ? old.apellido : null %>" />
                            <small class="text-danger ms-2">
                                <%= locals.errors && errors.apellido ? errors.apellido.msg : null %>
                            </small>
                        </div>
                        <div class="register__form__box">
                            <label class="register__form__box__label" for="email">Email</label>
                            <input type="email" name="email"
                                class="register__form__box__input <%= locals.errors && errors.email ? 'is-invalid' : null %>" id="email"
                                placeholder="name@example.com" value="<%= locals.old && old.email ? old.email : null %>" />
                            <small class="text-danger ms-2">
                                <%= locals.errors && errors.email ? errors.email.msg : null %>
                            </small>
                        </div>
                        <div class="register__form__box">
                            <label class="register__form__box__label" for="password">Contraseña</label>
                            <input type="password" name="password"
                            class="register__form__box__input <%= locals.errors && errors.password ? 'is-invalid' : null %>"
                            id="password" />
                            <small class="text-danger ms-2">
                                <%= locals.errors && errors.password ? errors.password.msg : null %>
                            </small>
                        </div>
                        <div class="register__form__box">
                            <label class="register__form__box__label" for="img-users">Subir imagen</label>
                            <input class="register__form__box__input" type="file" id="img-users" name="img-users"
                                placeholder="Subir imagen">
                        </div>
                        <div class="register__form__box">
                            <label class="register__form__box__label" for="password2">Confirmar contraseña</label>
                            <input type="password" name="password2"
                                class="register__form__box__input <%= locals.errors && errors.password2 ? 'is-invalid' : null %>"
                            id="password2" />
                            <small class="text-danger ms-2">
                                <%= locals.errors && errors.password2 ? errors.password2.msg : null %>
                            </small>
                        </div>
                        <div class=" register__form__box--terms">
                            <input class="form-check-input" type="checkbox" value="1" id="remember" name="remember" />
                            <label for="terms">He leído y acepto los <a class="link" href="">términos y condiciones</a></label><br>     
                            <small class="text-danger ms-2">
                                <%= locals.errors && errors.remember ? errors.remember.msg : null %>
                            </small>
                        </div>
                        <div class="register__form__box--button">
                            <button class="button__register" type="submit">REGISTRARME</button>
                        </div>
                        <div class="register__form__box register__form__box--registered">
                            <p>¿Ya estás registrado? <a class="link" href="/users/login">Ingresá</a></p>
                        </div>
                    </form>
                </section>
            </main>
            <%- include('../partials/footer') %>
        </body>

</html>