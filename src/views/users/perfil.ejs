<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{
	title : 'Perfil del usuario'
}) %>
<%- include('../partials/header')  %>

<body class="perfil">
    <main class="main__perfil">   
        <form action="/">
            <div class="form">
                <section class="section__perfil__foto">
                    <h3>Foto de Perfil</h3>
                    <article class="article__foto">
                        <img class="foto_perfil" src="/images/usuarios/imagen_default_user.jpg" alt="">
                    </article>
                </section>
                <section class="section__perfil__datos">
                    <h3>Datos Personales</h3>
                    <article class="section__perfil__datos--personal">
                        <!-- <form action="/" class="form"> -->
                            <div class="form__box">
                                <label class="form__label" for="name">Nombre</label>
                                <input class="form__input" id="name" type="text" placeholder="Escribí tu Nombre" name="name">
                                <small class="form__msg-error">Este campo es obligatorio</small>
                            </div>
                            <div class="form__box">
                                <label class="form__label" for="surname">Apellido</label>
                                <input class="form__input" id="surname" type="text" placeholder="Escribí tu Apellido" name="surname">
                                <small class="form__msg-error">Este campo es obligatorio</small>
                            </div>
                            <div class="form__box form__box--largo">
                                <label class="form__label" for="email">Email</label>
                                <input class="form__input" id="email" type="email" placeholder="correo@correo.com" name="email">
                                <small class="form__msg-error">Este campo es obligatorio</small>
                            </div>
                            <div class="form__box">
                                <label class="form__label" for="password">Contraseña</label>
                                <input class="form__input" id="password" type="password" placeholder="tu contraseña" name="password">
                                <small class="form__msg-error">Este campo es obligatorio</small>
                            </div>
                            <div class="form__box">
                                <label class="form__label" for="password2">Confirma tu contraseña</label>
                                <input class="form__input" id="password2" type="password" placeholder="confirma tu contraseña" name="password2">
                                <small class="form__msg-error">Este campo es obligatorio</small>
                            </div>
                        <!-- </form> -->
                    </article>
                    <h3>Datos del Domicilio</h3>
                    <article class="section__perfil__datos--personal">
                        <div class="form__box">
                            <label class="form__label" for="name">Nombre</label>
                            <input class="form__input" id="name" type="text" placeholder="Escribí tu Nombre" name="name">
                            <small class="form__msg-error">Este campo es obligatorio</small>
                        </div>
                        <div class="form__box">
                            <label class="form__label" for="surname">Apellido</label>
                            <input class="form__input" id="surname" type="text" placeholder="Escribí tu Apellido" name="surname">
                            <small class="form__msg-error">Este campo es obligatorio</small>
                        </div>
                        <div class="form__box form__box--largo">
                            <label class="form__label" for="email">Email</label>
                            <input class="form__input" id="email" type="email" placeholder="correo@correo.com" name="email">
                            <small class="form__msg-error">Este campo es obligatorio</small>
                        </div>
                        <div class="form__box">
                            <label class="form__label" for="password">Contraseña</label>
                            <input class="form__input" id="password" type="password" placeholder="tu contraseña" name="password">
                            <small class="form__msg-error">Este campo es obligatorio</small>
                        </div>
                        <div class="form__box">
                            <label class="form__label" for="password2">Confirma tu contraseña</label>
                            <input class="form__input" id="password2" type="password" placeholder="confirma tu contraseña" name="password2">
                            <small class="form__msg-error">Este campo es obligatorio</small>
                        </div>
